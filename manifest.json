{
  "manifest_version": 3,
  "name": "Color Shortcut Tabs",
  "version": "1.0",
  "description": "Use custom keyboard shortcuts to change webpage background colors.",
  "permissions": ["storage", "tabs", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
